        <RelativeLayout
            android:layout_below="@+id/header"
            android:id="@+id/edittext"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:inputType="textPersonName"
                android:textColor="@color/black"

                >
                <EditText
                    android:textColor="@color/black"
                    android:layout_margin="10dp"

                    android:id="@+id/updatesubcategoryname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sub-Catagory Name"
                    android:inputType="textCapCharacters"
                    android:textSize="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">


            <Button
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:background="@drawable/b_round"
                android:backgroundTint="@color/cyanbase"
                android:layout_gravity="center"
                android:id="@+id/updateimagepick"
                android:layout_margin="10dp"

                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:text="Pick Sub-Category Image"
          />


            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_subcategory"
                android:layout_below="@+id/updatecatgory_pickimage_button_dialog"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/b_chooseimage"

                />
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:backgroundTint="@color/black"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/progressUpdatesubcategory"/>

            <Button
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:background="@drawable/b_round"
                android:backgroundTint="@color/cyanbase"
                android:layout_gravity="center"
                android:id="@+id/updatesubcategory"
                android:layout_centerInParent="true"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/updatecatagoryImage"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="20dp"
                android:text="Update Sub-Category"
                android:textColor="@color/White" />

        </LinearLayout>



    </RelativeLayout>










</RelativeLayout>